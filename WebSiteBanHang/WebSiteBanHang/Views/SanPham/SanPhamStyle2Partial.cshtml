@using WebSiteBanHang.Models;
@model IEnumerable<SanPham>

<style>
    .textc1 {
        font-size: 16pt;
    }
    .textc2-tren{
        font-size:14pt;
    }
    .textc2-duoi{
        font-size:8pt;
    }
    a {
        text-decoration:none;
        display:block;
    }
    a:hover {
        color: red;
        text-decoration: none;
    }
</style>

<div class="content-top-bottom">
    
    <div class="col-md-6 men">
        <a href="single.html" class="b-link-stripe b-animate-go   thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/HinhAnh/"+Model.ElementAt(0).HinhAnh)" alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-top top-in  b-delay03 textc1 ">
                    <span>@Html.Raw(Model.ElementAt(0).CauHinh)</span>
                </h3>
            </div>
            <h3 class="textc1" style="font-size:16pt;">@Model.ElementAt(0).TenSP</h3>
        </a>
    </div>
    <div class="col-md-6">
        <div class="col-md1 ">
            <a href="single.html" class="b-link-stripe b-animate-go  thickbox">
                <img class="img-responsive" src="@Url.Content("~/Content/HinhAnh/"+Model.ElementAt(1).HinhAnh)" alt="">
                <div class="b-wrapper">
                    <h3 class="b-animate b-from-top top-in1  b-delay03 textc2-tren">
                        <span>@Html.Raw(Model.ElementAt(1).CauHinh)</span>
                    </h3>
                </div>
                <h3 class="textc2-tren">@Model.ElementAt(1).TenSP</h3>
            </a>

        </div>
        <div class="col-md2">
            <div class="col-md-6 men1">
                <a href="single.html" class="b-link-stripe b-animate-go  thickbox">
                    <img class="img-responsive" src="@Url.Content("~/Content/HinhAnh/"+Model.ElementAt(2).HinhAnh)" alt="">
                    <div class="b-wrapper">
                        <h3 class="b-animate b-from-top top-in2  b-delay03 textc2-duoi">
                            <span>@Html.Raw(Model.ElementAt(2).CauHinh)</span>
                        </h3>
                    </div>
                    <h3 class="textc2-tren">@Model.ElementAt(2).TenSP</h3>
                </a>

            </div>
            <div class="col-md-6 men2">
                <a href="single.html" class="b-link-stripe b-animate-go  thickbox">
                    <img class="img-responsive" src="@Url.Content("~/Content/HinhAnh/"+Model.ElementAt(3).HinhAnh)" alt="">
                    <div class="b-wrapper">
                        <h3 class="b-animate b-from-top top-in2   b-delay03 textc2-duoi">
                            <span>@Html.Raw(Model.ElementAt(3).CauHinh)</span>
                        </h3>
                    </div>
                    <h3 class="textc2-tren">@Model.ElementAt(3).TenSP</h3>
                </a>

            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>

