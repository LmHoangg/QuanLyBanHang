@using WebSiteBanHang.Models;
@model IEnumerable<SanPham>


@*<div class="content-top">
   
    <h1>Điện thoại mới nhất</h1>
    <div class="grid-in">*@

@*<h1>@Model.First().LoaiSanPham.TenLoai mới nhất</h1>*@
        @foreach (var item in Model.Take(3))
           {
                <div class="col-md-4 grid-top">
                    @*<a href="@Url.Action("XemChiTiet","SanPham", new { id = item.MaSP})" class="b-link-stripe b-animate-go  thickbox">
*@
                        <a href="@Url.RouteUrl("XemChiTiet",new { id = item.MaSP, tensp = item.TenSP })" class="b-link-stripe b-animate-go  thickbox">
                            <img class="img-responsive" src="@Url.Content("~/Content/HinhAnh/"+item.HinhAnh)" alt="">
                            <div class="b-wrapper">
                                <h3 class="b-animate b-from-left b-delay03" style="text-align:left;font-size:20px;padding-top:10px;padding-left:10px;display:block;">
                                    @* <span style="text-align: left; position: absolute; left: 1%; top: 1%; font-size: 20pt;">@item.CauHinh</span>*@
                                   @Html.Raw(item.CauHinh)
                                </h3>
                            </div>
                        </a>


                        <p><a href="@Url.RouteUrl("XemChiTiet",new { id = item.MaSP, tensp = item.TenSP })">@Html.Raw(item.TenSP)</a></p>
                </div>
          }
        <div class="clearfix"> </div>